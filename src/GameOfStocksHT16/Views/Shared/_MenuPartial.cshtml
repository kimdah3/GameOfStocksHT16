@using Microsoft.AspNetCore.Identity
@using GameOfStocksHT16.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="StockList" asp-action="Index"><i class="fa fa-line-chart fa-2x"></i><span class="sr-only"></span></a></li>
        <li><a asp-area="" asp-controller="Users" asp-action="DisplayProfile"><i class="fa fa-user fa-2x"></i><span class="sr-only"></span></a></li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="fa fa-2x fa-cog"></span></a>
            <ul class="dropdown-menu" role="menu">
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home fa-2x"></i> <span class="sr-only"></span></a></li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="fa fa-2x fa-sign-in"></span></a>
            <ul class="dropdown-menu" role="menu">
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        </li>
    </ul>
}
