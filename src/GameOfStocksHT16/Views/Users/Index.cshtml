@model AllUsersViewModel
@{
    ViewData["Title"] = "Stock List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section-padding-medium">
    <div class="container">
        <h3>Topplista:</h3>
        <table class="table table-bordered table-condensed table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Totala tillgångar</th>
                    <th>Ökning</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LeaderBoard)
                {
                    int i = Model.LeaderBoard.IndexOf(item);
                    <tr>
                        <td>
                            @(i + 1).
                            <a asp-action="VisitProfile" asp-route-email="@item.Email">
                                @item.Email
                            </a>
                        </td>
                        <td>@item.TotalWorth kr</td>
                        @if (item.GrowthPercent > 0)
                        {
                            <td>@item.GrowthPercent% <i class="fa fa-arrow-up text-success pull-right"></i></td>
                        }
                        else if (item.GrowthPercent < 0)
                        {

                            <td>@item.GrowthPercent% <i class="fa fa-arrow-down text-danger pull-right"></i></td>
                        }
                        else
                        {
                            <td>@item.GrowthPercent%</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <div class=""></div>


    </div>
</section>

@section scripts
{
    <script type="text/javascript">
    </script>
}