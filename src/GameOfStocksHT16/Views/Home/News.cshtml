        <div class="col-lg-4 ">
            

                    <h4>Topp 5</h4>
                    <table class="table table-bordered table-condensed table-striped">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Utveckling</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CurrentLeaderBoard)
                            {
                                <tr>
                                    <td>@item.Email</td>
                                    <td>
                                        @item.TotalWorth kr
                                        @if (item.GrowthPercent > 0)
                                        {
                                            <span class="font-percent text-success">(@item.GrowthPercent%)</span>
                                        }
                                        else if (item.GrowthPercent < 0)
                                        {
                                            <span class="font-percent text-danger">(@item.GrowthPercent%)</span>
                                        }
                                        else
                                        {
                                            <span class="font-percent">(@item.GrowthPercent%)</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <h4>Dagens vinnare</h4>
                    <table class="table table-bordered table-condensed table-striped">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.TodaysWinners)
                            {
                                <tr>
                                    <td>@item.Email</td>
                                    @if (item.PercentPerDay > 0)
                                    {
                                        <td class="font-percent font-color-green">@item.PercentPerDay%</td>
                                    }
                                    else if (item.PercentPerDay < 0)
                                    {
                                        <td class="font-percent font-color-red">@item.PercentPerDay%</td>
                                    }
                                    else
                                    {
                                        <td class="font-percent">@item.PercentPerDay%</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                        <h4>Dagens förlorare</h4>
                        <table class="table table-bordered table-condensed table-striped">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TodaysLoosers)
                                {
                                    <tr>
                                        <td>@item.Email</td>
                                        @if (item.PercentPerDay > 0)
                                        {
                                            <td class="font-percent font-color-green">@item.PercentPerDay%</td>
                                        }
                                        else if (item.PercentPerDay < 0)
                                        {
                                            <td class="font-percent font-color-red">@item.PercentPerDay%</td>
                                        }
                                        else
                                        {
                                            <td class="font-percent">@item.PercentPerDay%</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
            </div>

    </div>
